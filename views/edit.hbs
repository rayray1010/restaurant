<div class="container-fluid w-50">
  <form method="POST" action="/restaurant/{{restaurant._id}}/edit">
    <div class="form-group">
      <label for="restaurantName">餐廳名稱</label>
      <input type="text" class="form-control" name='name' id="restaurantName" required=true placeholder="餐廳名稱"
        value="{{restaurant.name}}">
    </div>

    <div class="form-group">
      <label for="restaurantEngName">餐廳英文名稱</label>
      <input type="text" class="form-control" name='name_en' id="restaurantEngName" required=true placeholder="餐廳英文名稱"
        value="{{restaurant.name_en}}">
    </div>

    <div class="form-group">
      <label for="category">分類</label>
      <input type="text" class="form-control" name='category' id="category" required=true placeholder="哪類"
        value="{{restaurant.category}}">
    </div>

    <div class="form-group">
      <label for="image">餐廳照片</label>
      <input type="text" class="form-control" name='image' id="image" required=true placeholder="URL"
        value="{{restaurant.image}}">
    </div>

    <div class="form-group">
      <label for="location">餐廳地址</label>
      <input type="text" class="form-control" name='location' id="location" required=true placeholder="餐廳地址"
        value="{{restaurant.location}}">
    </div>

    <div class="form-group">
      <label for="phone">電話</label>
      <input type="text" class="form-control" name='phone' id="phone" required=true placeholder="電話"
        value="{{restaurant.phone}}">
    </div>

    <div class="form-group">
      <label for="google_map">google map</label>
      <input type="text" class="form-control" name='google_map' id="google_map" required=true placeholder="google_map"
        value="{{restaurant.google_map}}">
    </div>
    <div class="form-group">
      <label for="rating">評分</label>
      <input type="number" min="1" max="5" step="0.1" class="form-control" name='rating' id="rating" required=true
        placeholder="評分" value="{{restaurant.rating}}">

    </div>
    <div class="form-group">
      <label for="description">簡介</label>
      <textarea class="form-control" id="description" rows="3" name="description"
        required=true>{{restaurant.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">儲存</button>
    <a href="/">返回</a>
  </form>
</div>